
.data-mapping-panel .color-mapping >row {
  display: flex;
}

.data-mapping-panel .color-mapping >row {
  display: flex;
}

.data-mapping-panel .color-mapping .optionset {
  padding-left: 3px;
  padding-right: 3px;  
}
 
.data-mapping-panel .color-mapping .colormap {
  flex: 1 1 auto;
  padding-left: 3px;
  padding-right: 3px;
}

.data-mapping-panel .color-mapping .colorset, .data-mapping-panel .color-mapping .dataset {
  background-color: #7a8288;
  color: #fff;
}

.data-mapping-panel .color-mapping .colormap-content:empty:before {
  content:attr(data-text);
}

.data-mapping-panel .color-mapping .colormap-content {
  height: auto;
  background-color: #7a8288;
  color: #fff;
  min-height: 100px;
}

.data-mapping-panel .color-mapping .colormap-content .color-pad{
  display: inline-block;
  margin-top: 0px;
  margin-right: 5px;
  margin-bottom: 5px;
  min-width: 10px;
  cursor: pointer;
  text-align: center;
}

.data-mapping-panel .color-mapping .colormap-content .color-pad > i {
  display: block;
  margin-left: 1px;
  margin-right: 2px;
}

.data-mapping-panel .color-mapping .colormap-content .color-advanced {
  display: inline-block;
  cursor: pointer;
}